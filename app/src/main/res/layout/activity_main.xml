<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/autoHint2"
        android:layout_width="204dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="6dp"
        android:text="Auto Station"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/autoSpinner"
        app:layout_constraintStart_toEndOf="@+id/rrlogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.142" />

    <TextView
        android:id="@+id/endgameTxt"
        android:layout_width="194dp"
        android:layout_height="32dp"
        android:layout_marginStart="28dp"
        android:text="Endgame Station"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/endgameSpinner"
        app:layout_constraintStart_toEndOf="@+id/robotError"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        app:layout_constraintVertical_bias="0.71000004" />

    <TextView
        android:id="@+id/dummyTeam"
        android:layout_width="143dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/notes"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <ImageView
        android:id="@+id/rrlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rrlogo" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/cone0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cube0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcube" />

            <ImageView
                android:id="@+id/cone1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cone2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cube1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcube" />

            <ImageView
                android:id="@+id/cone3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cone4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cube2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcube" />

            <ImageView
                android:id="@+id/cone5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/cone6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cube3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcube" />

            <ImageView
                android:id="@+id/cone7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cone8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cube4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcube" />

            <ImageView
                android:id="@+id/cone9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cone10"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />

            <ImageView
                android:id="@+id/cube5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcube" />

            <ImageView
                android:id="@+id/cone11"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redcone" />
        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/both0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />

            <ImageView
                android:id="@+id/both1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />

            <ImageView
                android:id="@+id/both2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />

            <ImageView
                android:id="@+id/both3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />

            <ImageView
                android:id="@+id/both4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />

            <ImageView
                android:id="@+id/both5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />

            <ImageView
                android:id="@+id/both6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />

            <ImageView
                android:id="@+id/both7"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />

            <ImageView
                android:id="@+id/both8"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/redboth" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/autoChange"
        android:layout_width="290dp"
        android:layout_height="76dp"
        android:layout_marginStart="30dp"
        android:background="@color/purple_500"
        android:text="AUTO"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintStart_toEndOf="@+id/autoSpinner"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65999997" />

    <Spinner
        android:id="@+id/autoSpinner"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="48dp"
        android:background="@color/white"
        android:entries="@array/autoEngage"
        android:popupBackground="@color/white"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/endgameSpinner"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        android:entries="@array/endgameEngage"
        android:popupBackground="@color/white"
        android:spinnerMode="dropdown"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dummyTeam"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        tools:visibility="visible" />

    <Switch
        android:id="@+id/robotError"
        android:layout_width="144dp"
        android:layout_height="29dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Robot Errors"
        app:layout_constraintStart_toEndOf="@+id/notes"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <EditText
        android:id="@+id/notes"
        android:layout_width="194dp"
        android:layout_height="76dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Notes"
        android:inputType="textLongMessage|text"
        android:maxLength="100"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/pregameBtn"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        tools:visibility="visible" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Pregame"
        android:layout_width="720dp"
        android:layout_height="339dp"
        android:background="#7F7F7F"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.69"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:visibility="gone">

        <TextView
            android:id="@+id/alliance_text"
            android:layout_width="155dp"
            android:layout_height="37dp"
            android:layout_marginStart="122dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="122dp"
            android:layout_marginRight="122dp"
            android:text="  Alliance"
            android:textColor="#040303"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Blue_Alliance"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="220dp"
            app:backgroundTint="#3F51B5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alliance_text"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/Red_Alliance"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="220dp"
            android:layout_marginTop="12dp"
            app:backgroundTint="#CC2121"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alliance_text"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/no_show"
            android:layout_width="119dp"
            android:layout_height="70dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginBottom="16dp"
            android:text="No Show"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/pregame_close"
            android:layout_width="119dp"
            android:layout_height="70dp"
            android:layout_marginEnd="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="20dp"
            android:text="Continue"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/name_input"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Scouter Name"
            android:inputType="textEmailAddress"
            android:maxLength="15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/round_input"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="Match#"
            android:inputType="number"
            android:maxLength="3"
            app:layout_constraintEnd_toStartOf="@+id/team_input"
            app:layout_constraintStart_toEndOf="@+id/name_input"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/team_input"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:ems="10"
            android:hint="Team"
            android:inputType="number"
            android:maxLength="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/autoFill"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:text="Autofill Team"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/sameScouter"
            app:layout_constraintTop_toBottomOf="@+id/name_input" />

        <Button
            android:id="@+id/sameScouter"
            android:layout_width="203dp"
            android:layout_height="66dp"
            android:layout_marginStart="6dp"
            android:text="Are you the same scouter as last match?"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/autoFill"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_input"
            tools:visibility="gone" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="135dp"
            android:layout_height="191dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toTopOf="@+id/pregame_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/round_input"
            app:srcCompat="@drawable/field" />

        <RadioGroup
            android:id="@+id/startLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.39"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="1.0">

            <RadioButton
                android:id="@+id/flankStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Flat" />

            <RadioButton
                android:id="@+id/middleStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Middle" />

            <RadioButton
                android:id="@+id/bumpStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bump" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/Gray_Box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/cardview_shadow_end_color"
        android:visibility="visible"
        app:backgroundTint="@color/cardview_shadow_end_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@android:color/transparent"
        tools:visibility="gone" />

    <Button
        android:id="@+id/pregameBtn"
        android:layout_width="174dp"
        android:layout_height="73dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="34dp"
        android:elevation="10dp"
        android:text="PREGAME"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    <ImageView
        android:id="@+id/data_submitted"
        android:layout_width="949dp"
        android:layout_height="588dp"
        android:elevation="1000dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/check"
        tools:visibility="gone" />

    <Button
        android:id="@+id/submit"
        android:layout_width="122dp"
        android:layout_height="65dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="42dp"
        android:text="Submit"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/endgameSpinner"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout"
        tools:visibility="visible" />

    <CheckBox
        android:id="@+id/playedDefense"
        android:layout_width="144dp"
        android:layout_height="80dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:text="Played Defense"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@+id/autoChange"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>